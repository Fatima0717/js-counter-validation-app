{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8000",  // サーバーが動作しているURL
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome", // Chromeの実行ファイルのパス
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ]
        }
    ]
}
